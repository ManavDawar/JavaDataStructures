
public class subsets {

	public static void main(String[] args) {
		int[] arr = { 10, 20, 30 };
		subset(arr);
	}

	public static void subset(int[] arr) {
		for (int i = 0; i < 8; i++) {
			int bitmask = 1 << 2;
			if ((i & bitmask) == 0) {
				System.out.println("off");
			} else {
				System.out.println("on");
			}
			bitmask = 1 << 1;
			if ((i & bitmask) == 0) {
				System.out.println("off");
			} else {
				System.out.println("on");
			}
			bitmask = 1 << 0;
			if ((i & bitmask) == 0) {
				System.out.println("off");
			} else {
				System.out.println("on");
			}

		}
	}

}
