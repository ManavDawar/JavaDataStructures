
public class wave {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[][] arr = { { 10, 20, 30 }, { 40, 50, 60 }, { 70, 80, 90 } };

		int c = 0;
		int r = 0;
		int dir;
		while (c > arr.length) {
			if (c == 0) {
				r++;
				c++;
				dir=0;
			} else if (c == arr[c].length) {
				r++;
				c--;
				dir=1;
				
			} else if(dir==0) {
				c++;
			}
		}

	}

}
