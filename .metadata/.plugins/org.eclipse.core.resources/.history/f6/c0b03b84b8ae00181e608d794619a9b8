
public class subarrays {

	public static void main(String[] args) {

		int[] arr = { 10, 20, 30, 40 };
		subarray(arr);

	}

	public static void subarray(int[] arr) {
		for (int i = arr.length; i >0; i--) {
			for (int j = i; j >0; j--) {
				for(int k = j;k>0;k--) {
					System.out.print(arr[i]);
				}
				System.out.println();
			}
		}
	}

}
